#!/bin/sh

mt76_path="/sys/class/ieee80211/phy0/hwmon0/temp1_input"
if [ -e "${mt76_path}" ]; then
	mt76_temp=" $(awk -F ': ' '{print $2}' "${mt76_path}")째C"
fi

if grep -Eq "ipq40xx|ipq806x" "/etc/openwrt_release"; then
	wifi_temp="$(awk '{printf("%.1f째C ", $0 / 1000)}' /sys/class/ieee80211/phy*/device/hwmon/hwmon*/temp1_input | awk '$1=$1')"
else
	wifi_temp="$(awk '{printf("%.1f째C ", $0 / 1000)}' /sys/class/ieee80211/phy*/hwmon*/temp1_input | awk '$1=$1')"
fi

cpu_temp="$(awk '{printf("%.1f째C", $0 / 1000)}' /sys/class/thermal/thermal_zone0/temp)"

if grep -q "ipq40xx" "/etc/openwrt_release"; then
	echo -n "WiFi:${mt76_temp} ${wifi_temp}"
elif grep -q "ipq807x|ipq806x" "/etc/openwrt_release"; then
	echo -n "CPU: ${cpu_temp}, WiFi: ${wifi_temp}"	
else	
	echo -n "CPU: ${cpu_temp}"
fi
